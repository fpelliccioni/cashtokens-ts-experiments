{
  "name": "cashtokens-ts-experiments",
  "version": "0.0.1",
  "description": "BCH CashTokens Experimetns in TypeScript",
  "keywords": [
    "boilerplate",
    "typescript",
    "jest"
  ],
  "author": "Brian Schlenker <fpelliccioni@gmail.com>",
  "license": "MIT",
  "repository": "fpelliccioni/cashtokens-ts-experiments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/__tests__/**/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf build coverage",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
